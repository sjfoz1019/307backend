<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    android:orientation="horizontal"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adName"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/subText"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adName"
            android:layout_marginTop="5dp"
            android:text="Title"
            android:textColor="@android:color/black"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/url"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/adName"
            android:layout_marginStart="107dp"
            android:layout_marginLeft="107dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/adName"
            android:layout_toRightOf="@+id/adName"
            android:text="Title"
            android:textColor="@android:color/black"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/imagePath"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/url"
            android:layout_alignLeft="@+id/url"
            android:layout_alignBottom="@+id/subText"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="0dp"
            android:text="Title"
            android:textColor="@android:color/black"
            android:textStyle="italic" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>